@section Scripts
{
    <script src="~/featureflags.bundle.js"></script>
}

<div id="capabilities-app" v-cloak>
    <banner v-if="showIEBanner" description="Internet Explorer is not a supported browser on the Self Service Portal. Certain functionality is quite likely to not work."></banner>
    
    <section class="section">
        <div class="container">
            <div class="level">
                <div class="level-left">
                    <div class="level-item">
                        <h1 class="title">Feature flags</h1>
                    </div>
                </div>
            </div>
        </div>

        <br />

        <div class="container">

            <div id="global-dialog-container"></div>

            <div class="has-text-centered" v-if="initializing">
                Loading...
            </div>
            <div>
                <p>Toggle experimental/debugging features</p>
                <br/>
                <p>
                    Use at your own discretion. Things may be broken or not function correctly with these feature flags enabled. DevEx will not support issues from build.dfds.cloud if they only occur with a feature flag enabled.
                    <br />
                    <br />
                    If the site is broken with a feature flag enabled, please clear your cache and cookies for dfds.build.cloud.
                </p>
            </div>

            <table class="table is-fullwidth is-hoverable" v-if="hasFlags">
                <thead>
                    <tr>
                        <th style="width: 30px;">Enabled</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="flag in flags" v-bind:data-id="flag.name">
                        <td style="text-align:center;"><input class="checkbox" type="checkbox" placeholder="Enabled" data-property="Enabled" v-model="flag.enabled"></td>
                        <td>{{flag.name}}</td>
                        <td>{{flag.description}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</div>